<% layout('layouts/boilerplate') %>
<body>
  
  <div class="row">
    <div class="col-8 offset-2">
        <h3>Create a New Listing</h3>
      <form method="post" action="/listings" class="needs-validation" novalidate>
        <div class="mb-2">
          <label for="listings[title]" class="form-label">Title</label>
          <input type="text" class="form-control" name="listings[title]" required/>
          <div class="valid-feedback">
            Good Title
          </div>
        </div>
        <div class="mb-2">
          <label for="listings[description]" class="form-label"
            >Description</label
          >
          <textarea
            class="form-control"
            name="listings[description]"
            rows="3"
            required
          ></textarea>
          <div class="invalid-feedback">
            Description should be short
          </div>
        </div>
        <div class="mb-2">
          <label for="listings[image]" class="form-label">Image</label>
          <input type="text" class="form-control" name="listings[image]" required/>
          <div class="invalid-feedback">
            Image URL should be valid
          </div>
        </div>
       
        <div class="row">
            <div class="mb-2 col-md-4">
                <label for="listings[price]" class="form-label">Price</label>
                <input  class="form-control" name="listings[price]" required />
                <div class="invalid-feedback">
                  Price should be valid
                </div>
              </div>
            <div class="mb-2 col-md-8">
                <label for="listings[country]" class="form-label">Country</label>
                <input type="text" class="form-control" name="listings[country]" required />
                <div class="invalid-feedback">
                  Country name should be valid
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="listings[location]" class="form-label">Location</label>
            <input type="text" class="form-control" name="listings[location]" required/>
            <div class="invalid-feedback">
              Location name should be valid
            </div>
          </div>
        <br />
        <button class="btn add-btn btn-dark mb-2">Add</button>
      </form>
    </div>
  </div>
</body>
